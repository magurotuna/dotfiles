[user]
    name = Yusuke Tanaka
    email = yusuktan@maguro.dev
    signingkey = "FB400947BC29E1350722F1C8ED140E94529786F1"

[push]
    default = current # Push current branch to remote using the SAME BRANCH NAME even if upstream is not set.

[commit]
    template = ~/.commit_template
    gpgsign = true

[tag]
    forceSignAnnotated = true

[color]
    ui = true

[alias]
    st = status
    co = checkout
    c = commit
    graph = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
    delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %

[core]
    excludesfile = ~/.gitignore_global
    quotepath = false
    pager = delta --plus-color="#012800" --minus-color="#340001" --theme='TwoDark'

[interactive]
    diffFilter = delta --color-only

[credential]
    helper = osxkeychain
    helper = cache --timeout 86400

[ghq]
    root = ~/repos

[gpg]
    program = gpg
